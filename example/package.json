{
  "name": "wake-example",
  "version": "0.0.0",
  "scripts": {
    "build": "rm -rf build && ../bin/wake"
  },
  "wake": {
    "css": {
      "sourceDirectory": "source/css",
      "targetDirectory": "build/css",

      "sourceRoot":      "source",
      "targetRoot":      "build",

      "builds": {
        "src": {
          "minify": false,
          "digest": false,
          "hosts":  ["https://a.com", "http://b.org/public"]
        },
        "min": {"minify": true, "tag": "suffix", "digest": true}
      },
      "targets": {
        "application": [ "bar", "foo" ]
      }
    },
    "binary": {
      "sourceDirectory": "source/images",
      "targetDirectory": "build/assets",
      "targets": {
        "a/deep/buried/image.jpg": "pumpkin.jpg",
        "pumpkin.jpg": ""
} } } }

